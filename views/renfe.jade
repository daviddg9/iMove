- css_title= "renfe"

include head.jade
  body
    include header.jade
    .app
      .header
        h1 Cercanias
    .options
      button.horario Horario
    .paradas
      input(type='text', placeholder='Nombre de parada').input

    ul.station-list
      each stop in stops
        li.station
          a.stationLink(href="/transportePublico/renfe/paradaRenfe")
            img(src="/images/metro.png", alt="").icon
            .station-name #{stop.STOP_NAME}
            .station-number #{stop.STOP_ID}
  
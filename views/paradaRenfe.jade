- css_title= "paradaRenfe"

include head.jade 
  body
    include header.jade 
    .body 
      .body-global 
        .body-child-superior
          .datosParada
            .nombreParada-padre
              h1 #{stopCard.STOP_NAME}
            .numerosLineas
              each route in routesSingle
                .numLinea-padre 
                  span(style="background-color: \##{route.ROUTE_COLOR};") #{route.ROUTE_SHORT_NAME}
        .card_inferior#warning_no_data
          p Actualmente no disponemos de ning√∫n servicio
          img(src="/images/errorIcon.svg", alt="")
        .body-child-inferior 
          .text-superior  
            p Tiempo real
          each route in stopCard.ROUTE_LIST
            .card-inferior
              .card-inferior-left
                .numLinea2(style="background-color: \##{route.ROUTE_COLOR};")
                  p #{route.ROUTE_SHORT_NAME}
              .card-inferior-right
                .nombreParada-parent
                  p.nombreParada #{route.ROUTE_LONG_NAME}
                .container-tiempos
                  each stop_time in route.RENFE_STOP_TIMES
                    .tiempo-parent
                      p.tiempo #{stop_time.DEPARTURE_TIME}
    script(src="/js/relative_times.js")